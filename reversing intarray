public class Main {
   public static void main(String[] args) {
      System.out.println("enter the orignial array");
      Scanner sc =new Scanner(System.in);
      int[]arr=new int[6];

      for(int i=0;i<arr.length;i++){
         arr[i]= sc.nextInt();
      }
      System.out.println(Arrays.toString(arr));
      reverse(arr);
      System.out.println(Arrays.toString(arr));

   }
   static void reverse(int[]orig){
      int start=0;
      int end= orig.length-1;
      while(start<end){
         swap(orig, start,end);
         start++;
         end--;
      }
      System.out.println(Arrays.toString(orig));
   }
   static void swap(int[]str , int src, int des){
      int temp=str[src];
      str[src]=str[des];
      str[des]=temp;
   }
}
